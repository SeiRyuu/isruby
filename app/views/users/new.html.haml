    %div{:class=>"field"}
      = f.label :password
      &nbsp; &nbsp;
      = f.password_field :password,:class=>"text_field"
    %div{:class=>"field"}
      = f.label :password_confirmation, "Confirmation"
      &nbsp; &nbsp;
      = f.password_field :password_confirmation,:class=>"text_field"
    %div{:class=>"actions field" }
      = f.submit "Sign up"

