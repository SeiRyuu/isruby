%html
  = stylesheet_link_tag 'screen' , 'custom'

  %body
    %div{:class=>"container"}
      %header
        =render 'layouts/header'
      %section{:class=>"round"}
        -flash.each do|key,value|
          %div{:class=>"flash #{key}"}
            =value
        =yield
      %footer
        =render 'layouts/footer'
      = debug(params) if Rails.env.development?